<Window x:Class="ProjetWPF.Annulation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetWPF"
        mc:Ignorable="d"
        Title="Annulation" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="annul.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        
        <Label Content="Numero de reservation (ID) : " HorizontalAlignment="Left" Margin="152,186,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxNumResa" HorizontalAlignment="Left" Height="26" Margin="320,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154"/>
        <Button x:Name="btnConfirmer" Content="Confirmer" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="400,230,0,0" Click="btnConfirmer_Click"/>
        <Button x:Name="btnAnnuler" Content="Annuler" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="320,230,0,0"/>


    </Grid>
</Window>
